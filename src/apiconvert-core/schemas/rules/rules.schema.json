{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/jonassaa/apiconvert-core/main/schemas/rules/rules.schema.json",
  "$comment": "Deprecated compatibility alias to the latest versioned schema under schemas/rules/vX.Y.Z/schema.json.",
  "title": "Apiconvert Conversion Rules",
  "description": "Canonical schema for Apiconvert conversion rules.",
  "type": "object",
  "additionalProperties": false,
  "unevaluatedProperties": false,
  "properties": {
    "inputFormat": { "$ref": "#/$defs/DataFormat" },
    "outputFormat": { "$ref": "#/$defs/DataFormat" },
    "fragments": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/RuleNode" }
    },
    "rules": {
      "type": "array",
      "items": { "$ref": "#/$defs/RuleNode" }
    }
  },
  "required": ["rules"],
  "$defs": {
    "DataFormat": {
      "type": "string",
      "enum": ["json", "xml", "query"]
    },
    "TransformType": {
      "type": "string",
      "enum": ["toLowerCase", "toUpperCase", "number", "boolean", "concat", "split"]
    },
    "MergeMode": {
      "type": "string",
      "enum": ["concat", "firstNonEmpty", "array"]
    },
    "ConditionOutputMode": {
      "type": "string",
      "enum": ["branch", "match"]
    },
    "ConditionElseIfBranch": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "expression": { "type": ["string", "null"] },
        "source": { "$ref": "#/$defs/ValueSource" },
        "value": { "type": ["string", "null"] }
      },
      "required": ["expression"]
    },
    "ValueSource": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["path", "transform", "condition", "constant", "merge"]
        },
        "path": { "type": ["string", "null"] },
        "paths": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "value": { "type": ["string", "null"] },
        "transform": { "$ref": "#/$defs/TransformType" },
        "expression": { "type": ["string", "null"] },
        "trueValue": { "type": ["string", "null"] },
        "falseValue": { "type": ["string", "null"] },
        "trueSource": { "$ref": "#/$defs/ValueSource" },
        "falseSource": { "$ref": "#/$defs/ValueSource" },
        "elseIf": {
          "type": ["array", "null"],
          "items": { "$ref": "#/$defs/ConditionElseIfBranch" }
        },
        "conditionOutput": { "$ref": "#/$defs/ConditionOutputMode" },
        "mergeMode": { "$ref": "#/$defs/MergeMode" },
        "separator": { "type": ["string", "null"] },
        "tokenIndex": { "type": ["integer", "null"] },
        "trimAfterSplit": { "type": ["boolean", "null"] }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "transform": { "const": "split" }
            },
            "required": ["transform"]
          },
          "then": {
            "properties": {
              "separator": {
                "anyOf": [
                  { "type": "null" },
                  { "type": "string", "minLength": 1 }
                ]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "condition" }
            },
            "required": ["type"]
          },
          "then": {
            "required": ["expression"]
          }
        }
      ],
      "required": ["type"]
    },
    "FieldRuleNode": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": { "const": "field" },
        "outputPaths": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "source": { "$ref": "#/$defs/ValueSource" },
        "defaultValue": { "type": ["string", "null"] }
      },
      "required": ["kind", "outputPaths", "source"]
    },
    "ArrayRuleNode": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": { "const": "array" },
        "inputPath": { "type": "string", "minLength": 1 },
        "outputPaths": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "itemRules": {
          "type": "array",
          "items": { "$ref": "#/$defs/RuleNode" }
        },
        "coerceSingle": { "type": "boolean" }
      },
      "required": ["kind", "inputPath", "outputPaths", "itemRules"]
    },
    "BranchElseIfRuleNode": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "expression": { "type": "string", "minLength": 1 },
        "then": {
          "type": "array",
          "items": { "$ref": "#/$defs/RuleNode" }
        }
      },
      "required": ["expression", "then"]
    },
    "BranchRuleNode": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": { "const": "branch" },
        "expression": { "type": "string", "minLength": 1 },
        "then": {
          "type": "array",
          "items": { "$ref": "#/$defs/RuleNode" }
        },
        "elseIf": {
          "type": "array",
          "items": { "$ref": "#/$defs/BranchElseIfRuleNode" }
        },
        "else": {
          "type": "array",
          "items": { "$ref": "#/$defs/RuleNode" }
        }
      },
      "required": ["kind", "expression", "then"]
    },
    "UseRuleNode": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "use": { "type": "string", "minLength": 1 },
        "outputPaths": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "source": { "$ref": "#/$defs/ValueSource" },
        "defaultValue": { "type": ["string", "null"] },
        "inputPath": { "type": "string", "minLength": 1 },
        "itemRules": {
          "type": "array",
          "items": { "$ref": "#/$defs/RuleNode" }
        },
        "coerceSingle": { "type": "boolean" },
        "expression": { "type": "string", "minLength": 1 },
        "then": {
          "type": "array",
          "items": { "$ref": "#/$defs/RuleNode" }
        },
        "elseIf": {
          "type": "array",
          "items": { "$ref": "#/$defs/BranchElseIfRuleNode" }
        },
        "else": {
          "type": "array",
          "items": { "$ref": "#/$defs/RuleNode" }
        }
      },
      "required": ["use"],
      "not": { "required": ["kind"] }
    },
    "RuleNode": {
      "oneOf": [
        { "$ref": "#/$defs/FieldRuleNode" },
        { "$ref": "#/$defs/ArrayRuleNode" },
        { "$ref": "#/$defs/BranchRuleNode" },
        { "$ref": "#/$defs/UseRuleNode" }
      ]
    }
  }
}
