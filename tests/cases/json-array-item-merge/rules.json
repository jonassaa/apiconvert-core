{
  "inputFormat": "json",
  "outputFormat": "json",
  "rules": [
    {
      "kind": "array",
      "inputPath": "people",
      "outputPaths": [
        "contacts"
      ],
      "itemRules": [
        {
          "kind": "field",
          "outputPaths": [
            "fullName"
          ],
          "source": {
            "type": "merge",
            "paths": [
              "first",
              "last"
            ],
            "mergeMode": "concat",
            "separator": " "
          }
        },
        {
          "kind": "field",
          "outputPaths": [
            "id"
          ],
          "source": {
            "type": "path",
            "path": "id"
          }
        }
      ]
    }
  ]
}
