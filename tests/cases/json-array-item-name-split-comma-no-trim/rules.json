{
  "version": 2,
  "inputFormat": "json",
  "outputFormat": "json",
  "rules": [
    {
      "kind": "array",
      "inputPath": "people",
      "outputPaths": [
        "contacts"
      ],
      "itemRules": [
        {
          "kind": "field",
          "outputPaths": [
            "firstName"
          ],
          "source": {
            "type": "transform",
            "transform": "split",
            "path": "name",
            "separator": ",",
            "tokenIndex": 0,
            "trimAfterSplit": false
          }
        },
        {
          "kind": "field",
          "outputPaths": [
            "lastName"
          ],
          "source": {
            "type": "transform",
            "transform": "split",
            "path": "name",
            "separator": ",",
            "tokenIndex": -1,
            "trimAfterSplit": false
          }
        }
      ]
    }
  ]
}
