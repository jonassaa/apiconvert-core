{
  "version": 2,
  "inputFormat": "json",
  "outputFormat": "json",
  "fieldMappings": [],
  "arrayMappings": [
    {
      "inputPath": "people",
      "outputPath": "contacts",
      "itemMappings": [
        {
          "outputPath": "firstName",
          "source": {
            "type": "transform",
            "transform": "split",
            "path": "name",
            "separator": " ",
            "tokenIndex": 0
          }
        },
        {
          "outputPath": "lastName",
          "source": {
            "type": "transform",
            "transform": "split",
            "path": "name",
            "separator": " ",
            "tokenIndex": -1
          }
        }
      ]
    }
  ]
}
